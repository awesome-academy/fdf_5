<div class="modal fade" id="myModal88" tabindex="-1" role="dialog" aria-labelledby="myModal88"
  aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
          &times;</button>
        <h4 class="modal-title" id="myModalLabel">
          <%= t("layouts.userlogin.title") %></h4>
      </div>
      <div class="modal-body modal-body-sub">
        <div class="row">
          <div class="col-md-8 modal_body_left modal_body_left1 border_right_modal" >
            <div class="sap_tabs">
              <div id="horizontalTab" style="display: block; width: 100%; margin: 0px;">
                <ul>
                  <li class="resp-tab-item" aria-controls="tab_item-0">
                    <span><%= t("layouts.userlogin.signin") %></span>
                  </li>
                  <li class="resp-tab-item" aria-controls="tab_item-1">
                    <span><%= t("layouts.userlogin.signup") %></span>
                  </li>
                </ul>
                <!-- Sign_in Form -->
                <%= render "layouts/user_login/signin_form" %>

                <!-- Sign_up Form -->
                <%= render "layouts/user_login/signup_form" %>

                <%= javascript_include_tag "easyResponsiveTabs.js" %>
              </div>
            </div>
            <div id="OR" class="hidden-xs">
              OR</div>
          </div>
          <div class="col-md-4 modal_body_right modal_body_right1">
            <div class="row text-center sign-with">
              <div class="col-md-12">
                <h3 class="other-nw">
                  Sign in with</h3>
              </div>
              <div class="col-md-12">
                <ul class="social">
                  <li class="social_facebook"><a href="#" class="entypo-facebook"></a></li>
                  <li class="social_dribbble"><a href="#" class="entypo-dribbble"></a></li>
                  <li class="social_twitter"><a href="#" class="entypo-twitter"></a></li>
                  <li class="social_behance"><a href="#" class="entypo-behance"></a></li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
