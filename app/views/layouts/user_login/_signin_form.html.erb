<div class="tab-1 resp-tab-content" aria-labelledby="tab_item-0">
  <div class="facts">
    <div class="register">
      <%= form_for "#" do |f| %>
        <%= f.label :email, t("layouts.userlogin.siginform.email") %>
        <%= f.email_field :email_signin, placeholder: t("layouts.userlogin.placeholder.email") %>
        <%= f.label :password, t("layouts.userlogin.siginform.pass") %>
        <%= f.password_field :password_signin, placeholder: t("layouts.userlogin.placeholder.pass") %>
        <div class="sign-up">
          <%= f.submit t("layouts.userlogin.siginform.submit") %>
        </div>
      <% end %>
    </div>
  </div>
</div>
